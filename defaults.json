{
	"type": "amqp",
	"url": "amqp://guest:guest@localhost:5672",
	"channel": {
		"prefetch": 1,
		"reconnectInterval": 2500,
		"reconnectLimit": 12
	},
	"deadLetter": {
		"queue": {
			"name": "postmaster.dlq"
		},
		"exchange": {
			"type": "topic",
			"name": "postmaster.dlx",
			"options": {
				"durable": true,
				"autoDelete": false
			}
		}
	},
	"listener": {
		"retryCount": 30,
		"retryInterval": 1000,
		"queue": {
			"prefix": "postmaster.sub",
			"separator": ".",
			"options": {
				"durable": true,
				"arguments": {
					"x-dead-letter-exchange": "postmaster.dlx",
					"x-message-ttl": 30000
				}
			}
		},
		"exchange": {
			"type": "topic",
			"name": "postmaster.topic",
			"options": {
				"durable": true,
				"autoDelete": false
			}
		}
	},
	"publisher": {
		"retryCount": 30,
		"retryInterval": 1000,
		"queue": {
			"prefix": "postmaster.pub",
			"separator": ".",
			"options": {
				"autoDelete": true,
				"exclusive": true,
				"arguments": {
					"x-dead-letter-exchange": "postmaster.dlx",
					"x-message-ttl": 60000
				}
			}
		},
		"exchange": {
			"type": "topic",
			"name": "postmaster.topic",
			"options": {
				"durable": true,
				"autoDelete": false
			}
		}
	}
}
