{
	"type": "amqp",
	"url": "amqp://localhost",
	"exchange": {
		"type": "topic",
		"name": "postmaster.topic",
		"options": {
			"durable": true,
			"autoDelete": false
		}
	},
	"deadLetter": {
		"queue": {
			"name": "postmaster.dlq"
		},
		"exchange": {
			"type": "topic",
			"name": "postmaster.dlx",
			"options": {
				"durable": true,
				"autoDelete": false
			}
		}
	},
	"listener": {
		"channel": {
			"prefetch": 1
		},
		"queues": {
			"prefix": "postmaster.sub",
			"separator": ".",
			"options": {
				"durable": true,
				"arguments": {
					"x-dead-letter-exchange": "postmaster.dlx",
					"x-message-ttl": 60000
				}
			}
		}
	},
	"publisher": {
		"channel": {
			"prefetch": 1
		},
		"queues": {
			"prefix": "postmaster.pub",
			"separator": ".",
			"options": {
				"autoDelete": true,
				"exclusive": true,
				"arguments": {
					"x-dead-letter-exchange": "postmaster.dlx",
					"x-message-ttl": 10000
				}
			}
		}
	}
}
