{
  "name": "postmaster-general",
  "version": "2.0.26",
  "description": "A simple library for making microservice message bus calls using Node.js over RabbitMQ.",
  "author": "Ben Whatley",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darklordzw/postmaster-general.git"
  },
  "keywords": [
    "rabbitmq",
    "microservices",
    "message bus"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/darklordzw/postmaster-general/issues"
  },
  "homepage": "https://github.com/darklordzw/postmaster-general#readme",
  "main": "postmaster-general.js",
  "files": [
    "postmaster-general.js",
    "defaults.json"
  ],
  "scripts": {
    "test": "nyc --reporter=html --reporter=text mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "darklordzw-rabbot": "^1.1.1",
    "log4js": "^2.3.4",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "dirty-chai": "^2.0.1",
    "mocha": "^4.0.1",
    "nyc": "^11.2.1",
    "sinon": "^4.0.0",
    "xo": "^0.18.2"
  },
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "xo": {
    "envs": [
      "node",
      "mocha"
    ],
    "ignores": [
      ".nyc_output/**",
      "coverage/**",
      "test-results/**"
    ],
    "rules": {
      "linebreak-style": "off",
      "unicode-bom": "off",
      "arrow-parens": [
        "error",
        "always"
      ],
      "import/no-unresolved": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "no-use-extend-native/no-use-extend-native": "off"
    }
  }
}
