{
  "name": "postmaster-general",
  "version": "0.1.0",
  "description": "A simple library for making synchronous and asynchronous microservice calls using Node.js over AMQP.",
  "author": "Ben Whatley",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darklordzw/postmaster-general.git"
  },
  "keywords": [
    "amqp",
    "microservices"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/darklordzw/postmaster-general/issues"
  },
  "homepage": "https://github.com/darklordzw/postmaster-general#readme",
  "main": "postmaster-general.js",
  "files": [
    "postmaster-general.js",
    "lib/*",
    "defaults.json"
  ],
  "scripts": {
    "test": "gulp test",
    "validate": "gulp validate"
  },
  "dependencies": {
    "amqplib": "^0.5.1",
    "amqpuri": "^1.0.3",
    "bluebird": "^3.4.7",
    "jsonic": "^0.2.2",
    "lodash": "^4.17.4",
    "patrun": "^0.5.1",
    "seneca": "^3.2.2",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai3-json-schema": "^1.2.1",
    "dirty-chai": "^1.2.2",
    "gulp": "^3.9.1",
    "gulp-test-rigging": "0.0.5",
    "sinon": "^1.17.6",
    "sinon-bluebird": "^3.1.0",
    "sinon-chai": "^2.8.0"
  },
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "xo": {
    "envs": [
      "node",
      "mocha"
    ],
    "rules": {
      "linebreak-style": "off",
      "unicode-bom": "off",
      "arrow-parens": [
        "error",
        "always"
      ],
	 "import/no-unresolved": "off",
	 "no-use-extend-native/no-use-extend-native": "off",
	 "new-cap": "off"
    }
  }
}
