{
  "name": "postmaster-general",
  "version": "5.1.6",
  "description": "A simple library for making microservice message calls over a variety of transports.",
  "author": "Ben Whatley",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darklordzw/postmaster-general.git"
  },
  "keywords": [
    "microservice",
    "message bus"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/darklordzw/postmaster-general/issues"
  },
  "homepage": "https://github.com/darklordzw/postmaster-general#readme",
  "main": "index.js",
  "files": [
    "index.js",
    "defaults.json"
  ],
  "scripts": {
    "test": "nyc --reporter=html --reporter=text mocha --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "doc": "./node_modules/.bin/jsdoc -c ./jsdoc-conf.json -t ./node_modules/ink-docstrap/template -R README.md -d ./docs -r ."
  },
  "dependencies": {
    "bluebird": "^3.5.3",
    "lodash": "^4.17.11",
    "uuid": "^3.3.2"
  },
  "peerDependencies": {
    "postmaster-general-core": "^1.0.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "dirty-chai": "^2.0.1",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "^3.5.5",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "postmaster-general-core": "^1.0.1",
    "sinon": "^7.2.4",
    "xo": "^0.24.0"
  },
  "directories": {
    "test": "test"
  },
  "xo": {
    "envs": [
      "node",
      "mocha"
    ],
    "ignores": [
      ".nyc_output/**",
      "coverage/**",
      "docs/**",
      "test-results/**"
    ],
    "rules": {
      "linebreak-style": "off",
      "unicode-bom": "off",
      "arrow-parens": [
        "error",
        "always"
      ],
      "import/no-unresolved": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "no-use-extend-native/no-use-extend-native": "off",
      "unicorn/no-process-exit": "off",
      "unicorn/catch-error-name": "off",
      "padding-line-between-statements": "off",
      "valid-jsdoc": "off"
    }
  }
}
